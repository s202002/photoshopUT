<h1>ユーザー編集</h1>
<%= form_for(@customer, url: customer_path) do |f| %>
<% if @customer.errors.any? %>
<div id="error">
  <h2><%= @customer.errors.count %>件のエラーがあります。</h2>
  <% @customer.errors.full_messages.each do |message| %>
  <%= message %>
  <% end %>
</div>
<% end %>
<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <label>プロフィール画</label>
      <%= f.attachment_field :profile_image %>
    </div>
  </div>
  <br>
  <div class="col-sm-6">
    <label>アカウント名</label>
    <%= f.text_field :name, class:"form-control", placeholder:"アカウント名はこちら" %>
  </div>

  <div class="col-sm-6">
    <label>メールアドレス</label>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"メールアドレスはこちら" %>
  </div>

  <div class="col-sm-6">
    <%= f.submit "変更する", class:"btn btn-lg btn-block btn-base-1 mt-20" %>
    <% end %>
  </div>
</div>
