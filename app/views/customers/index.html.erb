<h1>投稿一覧</h1>
<div class ="container">
	<div class="row">
		<% @photo.each do |photo| %>
		<div class ="col-lg-4">
			<%= link_to photo_path(photo.id) do %>
			<%= attachment_image_tag photo, :image, :fill, 400, 400) %>
		</div>
		<div class ="col-lg-3">
			<%= attachment_image_tag(photo.customer, :profile_image, :fill, 200,200, fallback: "no_image.jpg", class: "img-circle") %>
			<%= photo.customer.name %><br>
			<span class="glyphicon glyphicon-camera" aria-hidden="true"></span>
			<%= ("@" + photo.place) %>
			<%= ("#" + photo.tag) %>
		<% end %>
		</div>
		<% photo.explain %>
	</div>
</div>