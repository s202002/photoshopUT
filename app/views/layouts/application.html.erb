<!DOCTYPE html>
<html>
  <head>
    <title>PhotoshopUT</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <div class="container">
        <div class="row" style="background-color: green;">
          <div class="col-lg-6">
            <h3 style="color: white;">PhotoShopUT</h3>
          </div>
          <div class="col-lg-4">
            <% if customer_signed_in? %>
            <%= link_to customer_path(current_customer.id) do %><span class="glyphicon glyphicon-star-empty" aria-hidden="true"></span>マイページ
            <% end %>

            <%= linkt_to about_path do %><span class="glyphicon glyphicon-star-empty" aria-hidden="true"></span>About
            <% end %>

            <%= link_to destroy_customer_session_path, method: :delete do %><span class="glyphicon glyphicon-star-empty" aria-hidden="true"></span>ログアウト
            <% end %>

            <% else %>




        </div>
      </div>
    </header>
    <%= yield %>
  </body>
</html>
