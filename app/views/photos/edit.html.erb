<h1>投稿編集</h1>
<%= form_for(@photo, url: photo_path) do |f| %>
<% if @photo.errors.any? %>
<div id="error">
  <h2><%= @photo.errors.count %>件のエラーがあります。</h2>
  <% @photo.errors.full_messages.each do |message| %>
  <%= message %>
  <% end %>
</div>
<% end %>
<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <label>投稿したい写真を選択して下さい</label>
      <%= f.attachment_field :image %>
    </div>
  </div>
  <br>
  <div class="col-sm-6">
    <label>タイトル</label>
    <%= f.text_field :title, class:"form-control", placeholder:"タイトルはこちら" %>
  </div>

  <div class="col-sm-6">
    <label>撮影場所</label>
    <%= f.text_field :place, class:"form-control", placeholder:"北海道〇〇市まで" %>
  </div>

  <div class="col-sm-6">
    <label>コメント等</label>
    <%= f.text_area :explain, class:"form-control", placeholder:"一言はこちら" %>
  </div>

  <div class="col-sm-6">
    <label>＃＿＿名</label>
    <%= f.text_area :tag, class:"form-control", placeholder:"タグ名はこちら" %>
  </div>

  <div class="col-sm-6">
    <%= f.submit "編集を保存する", class:"btn btn-lg btn-block btn-base-1 mt-20" %>
    <% end %>
  </div>
</div>