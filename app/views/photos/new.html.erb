<%= form_for(@photo, url: photos_path) do |f| %>
<% if @photo.errors.any? %>
<div id="error">
  <h2><%= @photo.errors.count %>件のエラーがあります。</h2>
  <% @photo.errors.full_messages.each do |message| %>
  <%= message %>
  <% end %>
</div>
<% end %>
<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <label>投稿したい写真を選択して下さい</label>
      <%= f.attachment_field :image %>
    </div>
  </div>
  <br>
  <div class="col-sm-6">
    <label>タイトル</label>
    <%= f.string_field :title, class:"form-control", placeholder:"タイトルはこちら" %>
  </div>
  <br>

  <div class="col-sm-6">
    <label>撮影場所</label>
    <%= f.text_field :place, class:"form-control", placeholder:"撮影した場所を入力" %>
  </div>
  <br>

  <div class="col-sm-12">
    <%= f.text_area :explain, class:"form-control", placeholder:"感想等の一言" %>
  </div>
</div>
<%= f.submit "送信", class:"btn btn-lg btn-block btn-base-1 mt-20" %>
<% end %>